<section class="eightReasonsTopWrapper">

  <div class="innerWrapper">
      <div class="col halfWidth">
        {% if page.metafields.accentuate.eight_reasons_top_image != blank %}
          <div class="eight-reasons-top-img"><img class="lazyload" data-src="https://cdn.shopify.com/s/files/1/0313/4062/5964/files/eight-reasons---key-image---1.png?v=1625633802" alt=""/></div>
          {% endif %}
      </div>

      <div class="col halfWidth">
        <div class="col halfwidth article main-article">
          <header>
            <h1>
                {% if page.metafields.accentuate.eight_reasons_top_content != blank %}
                <div class="eight-reasons-top-header"> 
                  {{ page.metafields.accentuate.eight_reasons_top_content }} 
                  </div>          
                {% endif %}
            </h1>
            <p1>
                {% if page.metafields.accentuate.eight_reasons_top_body != blank %}
                <div class="eight-reasons-top-body"> 
                  {{ page.metafields.accentuate.eight_reasons_top_body }} 
                  </div>        
                {% endif %}
            </p1>
          </header>
          <footer>
                {% if page.metafields.accentuate.eight_reasons_top_cta != blank %}
           		 <a class="btn shop_btn" href="{{ page.metafields.accentuate.eight_reasons_top_cta }}">
                   {{ page.metafields.accentuate.eight_reasons_top_cta_field }}
            		</a>
        		{% endif %}
          </footer>
 		</div>
      </div>
	</div>
</section>


  
{% schema %}
  {
    "name": "Eight Reasons Top",
    "class": "eight-reasons-top",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Eight Reasons"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
	  {
        "type": "header",
        "content": "Our Choice of Undies"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
	  {
        "type": "text",
        "id": "our_choice_t",
        "label": "Heading",
        "default": "Our Choice of Undies"
      },
      {
        "type": "text",
        "id": "link_btn",
        "label": "Shop"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link",
        "info": "Optional"
      }      
      
    ],
    "presets": [
      {
        "name": "Eight Reasons Top",
        "category": "Eight Reasons"
      }
    ]
  }
{% endschema %}
